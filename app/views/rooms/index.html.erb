<div class="container">
  <div class="row justify-content-md-center">
    <div class="col">
        <ul class="sidebar-list">
            <li class="sidebar-item"><%= link_to "Mes annonces", rooms_path, class:"sidebar-link active" %></li>
            <li class="sidebar-item"><%= link_to "Mes Reservations", your_reservations_path, class:"sidebar-link" %></li>
            <li class="sidebar-item"><%= link_to "Mes Voyages", your_trips_path, class:"sidebar-link" %></li>
            </ul>  
        </div>
    </div>
    <div class="col">
          <div class="card bg-light mb-3" style="max-width: 100rem; ">
              <div class="card-header">Mes annonces</div>
              <% @rooms.each do |room| %>
              <div class="card-body">
                      <div class="row">
                        <div class="col-2">
                          <%= image_tag room.photos[0].image.url(:thumb) if room.photos.length > 0 %>
                        </div>
                        <div class="col-6">
                            <h4><%= room.listing_name %></h4>
                            <p><%= room.summary %></p>
                            <span class="badge badge-primary"><%= room.home_type %></span> <span class="badge badge-secondary"><%= room.room_type %></span> <span class="badge badge-success">Prix: <%= room.price %> â‚¬</span>
                        </div>
                        <div class="col-sm">
                            <a href="<%= edit_room_path(room) %>" class="btn btn-outline-info btn-lg"> <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editer </a>
                            
                        </div>
                      </div>
               </div>
               <hr >
               <% end %>
            </div>
    </div>
  </div>
</div>